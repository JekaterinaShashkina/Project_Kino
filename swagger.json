    "/movies": {
      "post": {
        "tags": [
          "Movie"
        ],
        "description": "Post new movie",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "title",
                "duration",
                "releasedate",
                "rating",
                "status",
                "movielanguage"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "example": "Inception",
                  "description": "Movie title"
                },
                "duration": {
                  "type": "integer",
                  "example": 148,
                  "description": "Duration of the movie in minutes"
                },
                "releasedate": {
                  "type": "string",
                  "format": "date",
                  "example": "2010-07-16",
                  "description": "Release date in YYYY-MM-DD format"
                },
                "rating": {
                  "type": "number",
                  "format": "float",
                  "example": 8.8,
                  "description": "Rating of the movie from 0 to 10"
                },
                "status": {
                  "type": "string",
                  "example": "Released",
                  "description": "Status of the movie. Allowed: Released, Processes, Cancelled"
                },
                "movielanguage": {
                  "type": "string",
                  "example": "English",
                  "description": "Language of the movie"
                },
                "categoryids": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "example": [1, 2],
                  "description": "Array of category IDs the movie belongs to"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
