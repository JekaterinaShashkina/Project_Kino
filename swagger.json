    "/movies/search": {
  "get": {
    "tags": ["Movie"],
    "summary": "Search movies",
    "description": "Search movies by title, genre (category), and release date range",
    "parameters": [
      {
        "name": "title",
        "in": "query",
        "description": "Part of movie title to search for",
        "required": false,
        "type": "string",
        "example": "Wind"
      },
      {
        "name": "category",
        "in": "query",
        "description": "Genre name to search for",
        "required": false,
        "type": "string",
        "example": "Romance"
      },
      {
        "name": "releasedateFrom",
        "in": "query",
        "description": "Release date from (YYYY-MM-DD)",
        "required": false,
        "type": "string",
        "format": "date",
        "example": "1940-01-01"
      },
      {
        "name": "releasedateTo",
        "in": "query",
        "description": "Release date to (YYYY-MM-DD)",
        "required": false,
        "type": "string",
        "format": "date",
        "example": "1950-12-31"
      }
    ],
    "responses": {
      "200": {
        "description": "List of found movies"
      },
      "400": {
        "description": "Bad request"
      },
      "500": {
        "description": "Internal server error"
      }
    }
  }
},
